package  {	import flash.display.MovieClip;	import flash.display.SimpleButton;	import flash.text.TextField;	import flash.net.NetConnection;	import flash.events.MouseEvent;	import flash.net.Responder;		public class SteelcaseTraining extends MovieClip {				public var submitBtn:SimpleButton;		public var resultTxt:TextField;		public var warningTxt:TextField;		public var dataInput:TextField;						private var _netConnection:NetConnection;				public function SteelcaseTraining() {			submitBtn.addEventListener(MouseEvent.CLICK, getSubmitBtnClickHandler);			_netConnection = new NetConnection();		}				private function getSubmitBtnClickHandler(event:MouseEvent):void{			if(loaderInfo.url.indexOf("file://") == 0){				warningTxt.text = "Please access this example through a server, and not through the file system, as the gateway is set as a relative url. Alternatively you can change the url in the class.";			}else{								_netConnection.connect("../../Php/");				_netConnection.call("SteelcaseService/updateStats", new Responder(handleResult, null),dataInput.text);			}		}						private function handleResult(result:Object):void{			resultTxt.text = result.toString();		}			}	}